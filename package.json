{
  "name": "typescript-natours",
  "description": "natours in typescript, mongodb and pug",
  "engines": {
    "node": "14.15.1",
    "npm": "6.14.8"
  },
  "scripts": {
    "start": "NODE_ENV=production node --experimental-specifier-resolution=node build/index.js",
    "watch": "tsc -w",
    "start:dev": "NODE_ENV=development nodemon --experimental-specifier-resolution=node build/index.js",
    "clean": "rimraf build node_modules && npm i",
    "deps": "typac",
    "devs": "typac --dev",
    "debug": "NODE_ENV=development ndb --experimental-specifier-resolution=node build/server.js"
  },
  "dependencies": {
    "bcrypt": "5.0.0",
    "express": "4.17.1",
    "http-status-codes": "2.1.4",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.11.15",
    "morgan": "1.10.0",
    "nodemailer": "6.4.17",
    "ramda": "0.27.1",
    "slugify": "1.4.6",
    "validator": "13.5.2"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/express": "4.17.9",
    "@types/jsonwebtoken": "8.5.0",
    "@types/mongoose": "5.10.3",
    "@types/morgan": "1.9.2",
    "@types/node": "14.14.20",
    "@types/nodemailer": "6.4.0",
    "@types/nodemon": "1.19.0",
    "@types/ramda": "0.27.36",
    "@types/rimraf": "3.0.0",
    "@types/validator": "13.1.3",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "chalk": "4.1.0",
    "dotenv": "8.2.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "ndb": "1.1.5",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "typac": "0.1.10",
    "typescript": "4.1.3"
  },
  "type": "module"
}
